#!/usr/bin/env bash

set -euo pipefail

if ! command -v rustc &> /dev/null; then
    echo "Installing Rust.."
    curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | bash -s -- -y --no-modify-path
fi

export PATH="$HOME/.cargo/bin:$PATH"

rustup default stable
rustup component add rust-src rust-analyzer
rustup target add wasm32-unknown-unknown x86_64-pc-windows-gnu aarch64-apple-darwin
rustup toolchain install nightly-2024-03-29

echo "Installing Rust programs"

cargo_install() {
    cargo install --locked "$@"
}

for proj in ~/.dotfiles/bin/rust/*; do
    cargo_install --path $proj
done

if [[ $# == 1 && $1 == "--local" ]]; then
    exit 0
fi

cargo_install \
    ag \
    ast-grep \
    bacon \
    bat \
    cargo-asm \
    cargo-generate \
    cargo-expand \
    cargo-lipo \
    cargo-nextest \
    cargo-watch \
    diskonaut \
    erdtree \
    eva \
    fd-find \
    hyperfine \
    just \
    lsd \
    mdbook \
    miniserve \
    pastel \
    pipr \
    ripgrep \
    scooter \
    starship \
    tailspin \
    tealdeer \
    tokei \
    trunk \
    wasm-pack \
    watchexec-cli \
    xh \
    ;

cargo_install atuin --version 18.4.0
cargo_install --features cli dotenv

# install sniffnet unless we are in wsl
if [[ -z "${WSL_DISTRO_NAME:-}" ]]; then
    cargo_install sniffnet
fi

set_icon() {
    if [[ "$(uname -s)" != "Darwin" ]]; then
        return 0
    fi
    if command -v fileicon %>/dev/null; then
        if [[ -f "$1" ]]; then
            fileicon set "$1" "$2" >/dev/null
        fi
    fi
}

set_icon ~/.cargo/bin/sniffnet ~/.dotfiles/icons/sniffnet.icns
