#!/usr/bin/env bash

# Create a new bash script
#
# Usage:
#
# # create or open the script named foo
# newgo foo

set -euo pipefail

name=${1:-""}
dir=~/.dotfiles/bin

usage() {
	echo "usage: $(basename "$0") [name]"
	exit 1
}

addmake=""
if [ "$name" = "" ]; then
	name="test"
	dir=$(mktemp -d)
	addmake=true
fi

file=$dir/$name

if [ ! -f "$file" ]; then
	cat <<-eos > "$file"
	#!/usr/bin/env bash
	set -euo pipefail


	eos
fi

if [ "$addmake" = "true" ]; then
	cat <<eos > "$dir"/Makefile
run:
	./test
eos
fi

cd "$dir"
chmod 755 "$file"
exec nvim +5 "$file"
