#!/usr/bin/env bash

set -e

name=${1}
dir=~/code

usage() {
	echo "usage: $(basename $0) [name]"
	exit 1
}

if [ "$name" = "" ]; then
	name=test
	dir=$(mktemp -d)
fi

cd $dir

if [ -d $name ]; then
	echo "error: $name already exists"
	exit 1
fi

cargo new $name
cd $name

cat <<eos > Makefile
run:
	cargo run

release:
	cargo build --release

test:
	cargo test

eos

cat <<eos > Taskfile.yml
version: '3'
vars:
tasks:
  test:
    dir: '{{.USER_WORKING_DIR}}'
    cmds:
      - cargo test
    silent: true
  default:
    dir: '{{.USER_WORKING_DIR}}'
    cmds:
      - cargo run
    silent: true
eos

nvim
exec zsh
