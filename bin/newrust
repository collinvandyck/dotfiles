#!/usr/bin/env bash

set -e

full=0
name=""
dir=~/code

usage() {
	echo "usage: $(basename "$0") [--full] [name]"
	exit 1
}

bail() {
    echo "fatal: $1"
    exit 1
}

while [[ $# -gt 0 ]]; do
    case $1 in
        --full)
            full=1
            shift
            ;;
        *)
            name="$1"
            shift
            ;;
    esac
done

if [ "$name" = "" ]; then
	name=wip
	dir=$(mktemp -d)
fi

cd "$dir"

if [ -d "$name" ]; then
    bail "$name already exists"
fi

cargo new "$name"
cd "$name"

# prevents lsp from complaining about unused items
cargo-tweak --allow-unused true

if [[ $full -eq 1 ]]; then
    cargo-starter-pack
fi

rustfmt-starter-pack

cat > rust-toolchain.toml <<EOF
[toolchain]
channel = "1.85.0"
EOF

cat <<eos >.justfile
run:
    cargo run

build:
    cargo build

test:
    cargo test
eos

cat <<eos > Makefile
run:
	cargo run

release:
	cargo build --release

test:
	cargo test

eos

cat <<eos > src/main.rs
#[tokio::main]
async fn main() {}
eos

cargo-starter-pack
#nvim src/main.rs
exec zsh
