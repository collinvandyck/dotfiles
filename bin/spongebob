#!/usr/bin/env bash

# Required parameters:
# @raycast.schemaVersion 1
# @raycast.title sPonGeBob
# @raycast.mode fullOutput
# @raycast.argument1 { "type": "text", "placeholder": "preset", "optional": false }

# Optional parameters:
# @raycast.icon ðŸ¤–

# Documentation:
# @raycast.author collinvandyck
# @raycast.authorURL https://raycast.com/collinvandyck

set -euo pipefail

spongebob-line() {
    line="$*"
    chars="${#line}"
    result=""
    for (( i=0; i<chars; i++ )); do
        flip=$(( RANDOM < (32767/2) ))
        char="${line:$i:1}"
        if [[ $flip == 1 ]]; then
            if [[ "$char" =~ [a-z] ]]; then
                char="${char^^}"
            elif [[ "$char" =~ [A-Z] ]]; then
                char="${char,,}"
            fi
        fi
        result+=$char
    done
    echo "$result"
}

if [[ $# -gt 0 ]]; then
    spongebob-line "$@" | pbcopy
    exit
fi

while IFS= read -r line || [[ -n "$line" ]]; do
    spongebob-line "$line"
done

